{
    "name": "添加/修改收款码",
    "method": "post",
    "params": {
        "id": {
            "lbl": "收款码ID",
            "type": "int"
        },
        "price": {
			"lbl": "价格(分)",
			"type": "int",
			"range": [0]
        },
        "alipay": {
            "lbl": "支付宝 二维码链接",
			"len": [0, 256]
		},
		"alipay_url": {
			"lbl": "支付宝 支付链接",
			"len": [0, 128]
		},
        "wechat": {
            "lbl": "微信 二维码链接",
			"len": [0, 256]
        }
	},
	"grant":"{U}",
	"pretreat":"if({}.alipay===''){}.alipay_url=''", // 清除支付宝二维码时清除支付宝支付链接
	"check":[
		{"R": "{}.id||{}.price!=null", "M": "创建收款码时必须设置价格"},
		{"R": "{}.id||{}.alipay||{}.wechat", "M": "创建收款码时至少上传一种二维码"},
		{"R": "!(!{}.alipay^!{}.alipay_url)", "M": "支付宝二维码与支付宝链接必须一起传"}
	],
	"error": {
		"404": "二维码不存在或无权限",
		"405": "已存在相同价格的二维码"
	},
	"ret": {
		"no": 200
	}
}